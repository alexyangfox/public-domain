	.INCLUD	XOSINC:\XMAC\XOS.PAR
	.INCLUD	XOSINC:\XMAC\STDIO.PAR
	.INCLUD	XOSINC:\XMAC\CTYPE.PAR

	.STDSEGS

	.SBTTL	toupper - Function to convert character to upper case

;+
; Function: toupper()
;
; Call:
;
;       PUSHL	<character to convert>
;
;       CALL	toupper
;
; Return:
;
;       EAX = If lower case, then upper case, else unchanged character
;-

p1 =! 4t

	.PSECT	_TEXT_p

	.ENTRY	toupper

toupper:
        MOVZBL	EAX, p1.B[ESP]		;Get character as index
	TESTB	_chrtbl#[EAX], #CT$LOWER ;Lower case character?
	JE	10$.S			;No - do nothing to it
	SUBB	AL, #'a'-'A'		;Yes - convert to upper case
10$:	RET

	.END
