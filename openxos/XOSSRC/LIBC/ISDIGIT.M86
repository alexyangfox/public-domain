	.INCLUD	XOSINC:\XMAC\XOS.PAR
	.INCLUD	XOSINC:\XMAC\STDIO.PAR
	.INCLUD	XOSINC:\XMAC\CTYPE.PAR

	.STDSEGS

	.SBTTL	isdigit - ANSI C function to test for digit character

;+
; Function: isdigit()
;
; Call:
;
;       PUSHL	<character to check>
;
;       CALL	isdigit
;
; Return:
;
;       EAX = Non-zero if digit, else zero.
;-

p1 =! 4t

	.PSECT	_TEXT_p

	.ENTRY	isdigit

isdigit:
        MOVZBL	EAX, p1.B[ESP]		;Get character as index
	TESTB	_chrtbl#[EAX], #CT$DIGIT ;Digit character?
	JNE	10$.S			;Yes, return non-zero EAX
        CLRL    EAX                     ;No, so return zero
        RET

; Here if character is digit

10$:    MOVL    EAX, #-1.B              ;Return a non-zero value
        RET

	.END
