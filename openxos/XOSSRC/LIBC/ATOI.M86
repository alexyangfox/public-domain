	.INCLUD	XOSINC:\XMAC\XOS.PAR
	.INCLUD	XOSINC:\XMAC\STDIO.PAR

	.STDSEGS

	.SBTTL	atoi - ANSI C function to convert integer strings
	.SBTTL	atol - ANSI C function to convert long integer strings

;+
; Function: atoi(), atol()
;
; Call:
;
;	PUSHL	<offset of integer string>
;
;	CALL 	atoi
;
;	-OR-
;
;	PUSHL	<offset of long integer string>
;
;	CALL 	atol
;
; Return:
;
;       EAX =  Binary representation of string
;-

p1 =! 4t

	.PSECT	_TEXT_p

	.ENTRY	atoi, atol

atoi:
atol:
	MOVL	EAX, p1.B[ESP]		;Get offset of string
	MOVL	EBX, #10t.B  		;Convert to base 10
	CLRL	ECX	  		;No end pointer
	JMP	_strtoul#		;Now convert and return

	.END
