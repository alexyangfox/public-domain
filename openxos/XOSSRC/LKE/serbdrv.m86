;Here to set the value of the IINFLOW characteristic

setiiflow:
	CALL	knlGetTdb##
	JC	4$.S
	PUSHL	EBX
	MOVL	ECX, #knlTRMIFLOWTBLSZ##
	MOVL	EBX, #knlTrmIFlowTbl##
	CALL	knlGetDcVal2##
	POPL	EBX
	JC	4$.S
	ANDB	[ESI+EBX], #0F0h
