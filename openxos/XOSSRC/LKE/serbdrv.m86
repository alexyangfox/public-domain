	DATA

	.MOD	4
serbftdb:.LONG	0		;Offset of first serial interface TDB
serbltdb:.LONG	0		;Offset of last serial interface TDB
serbfbdb:.LONG	0		;Offset of first board data block (BDB)
irqname: .LONG	'TRMs', 'erb', 0, 0

